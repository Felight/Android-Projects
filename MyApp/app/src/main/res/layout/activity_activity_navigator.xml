<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.felight.myapp.ActivityNavigator">

    <Button
        android:onClick="launchActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Greet User"
        android:id="@+id/btnGreetUser"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:onClick="launchActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Basic Calculator"
        android:id="@+id/btnCalcualtor"
        android:layout_below="@+id/btnGreetUser"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnGoogleNews"
        android:onClick="launchActivity"
        android:text="Google News"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/btnblue"
        android:layout_below="@+id/btnCalcualtor"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:onClick="launchActivity"
        android:id="@+id/btnFelightNews"
        android:text="Felight News"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/btnblue"
        android:layout_below="@+id/btnGoogleNews"
        android:layout_alignLeft="@+id/btnGoogleNews"
        android:layout_alignStart="@+id/btnGoogleNews"/>
</RelativeLayout>
